<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="actionBarTheme">@style/MyTheme.ActionBar</item>
        <item name="android:textAllCaps">false</item>
        <item name="actionModeStyle">@style/MyTheme.ActionMod</item>
    </style>

    <style name="MyTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="drawerArrowStyle">@style/MyTheme.DrawerArrowStyle</item>
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="MyTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/darker_gray</item>
    </style>

    <style name="MyTheme.Slidr" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyTheme.ActionMod" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/colorGreen</item>
        <item name="closeItemLayout">@layout/action_mod_close_item</item>
    </style>

</resources>
